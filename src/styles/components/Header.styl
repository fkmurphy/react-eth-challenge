.Header
  display flex
  flex-wrap wrap
  box-sizing border-box;
  //background linear-gradient(-8deg, rgba(0,0,0,.5) 0%, rgba(255,255,255,0.8) 70%);
  justify-content center
  border-bottom 3px solid #98ca3f
  grid-column 1/3
  grid-row 1/2
  align-content center

  .Header-title
    font-size 3em
    margin 0

  img
    margin-right 2rem
    border-color black
    border-radius 50%
    box-shadow 0px 9px 17px 0px rgba(0,0,0,0.24)
    max-width 150px


+prefix-classes('About-')
  .title
    font-style italic
    font-weight bold

  .title, .item
    margin auto
    line-height 1.5em

  .item span
    margin-right .8rem

