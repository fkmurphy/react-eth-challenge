.Header
  display flex
  justify-content center
  background: rgb(152,202,63);
  background: linear-gradient(0deg, rgba(204,205,203,1) 0%, rgba(152,202,63,1) 100%);
  border-bottom 3px solid #98ca3f
  grid-column 1/3
  grid-row 1/2

  div, img
    align-self center

  img
    margin-right 5em
    border-radius 50%

  .Header-tile
    color red
    font-size 1.2em
    align-self center

+prefix-classes('About-')
  .title
    font-style italic
    font-weight bold

  .title, .item
    margin auto

  .item span
    margin-right .5em

