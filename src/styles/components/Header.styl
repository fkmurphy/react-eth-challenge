.Header
  display flex
  justify-content center
  //background: rgb(211,222,192);
  
  background: linear-gradient(-8deg, rgba(0,0,0,.5) 0%, rgba(255,255,255,0.8) 70%);
  border-bottom 3px solid #98ca3f
  grid-column 1/3
  grid-row 1/2

  div, img
    align-self center

  img
    border-color black
    margin-right 5em
    border-radius 50%
    box-shadow: 0px 9px 17px 0px rgba(0,0,0,0.14);

  .Header-tile
    color red
    font-size 1.2em
    align-self center

+prefix-classes('About-')
  .title
    font-style italic
    font-weight bold

  .title, .item
    margin auto

  .item span
    margin-right .8em

