@import url('https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;1,100;1,300&display=swap');

$hex-platzi-color = #98ca3f
$rgba-platzi-color = rgba(204,205,203,1)

body
  font-family 'Lato', sans-serif
  margin 0
  padding 0
  background rgb(152,202,63)
  background linear-gradient(15deg, rgba(152,202,63,1) 0%, rgba(255,255,255,1) 10%, rgba(255,255,255,1) 90%, rgba(152,202,63,1) 100%)
  background-repeat none

#app
  display: grid
  gap 1em 0em
  margin 0em 2em
  grid-template-columns repeat(2, 1fr)
  grid-template-rows 12em repeat(2, .2fr) repeat(2, .25fr)
  ul
    padding 0
    list-style none

.Progress-bar
  background-color #ececec 
  border-radius 13px
  padding 3px

  div
    font-size .8em
    background-color $hex-platzi-color
    height 20px
    border-radius 10px
    small
      white-space nowrap
    
