@import url('https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;1,100;1,300&display=swap');

$hex-platzi-color = #98ca3f
$rgba-platzi-color = rgba(204,205,203,1)

body
  background-color white 
  font-family: 'Lato', sans-serif;
  margin 0
  padding 0

#app
  display: grid
  gap 1em 0em
  margin 0em 2em
  grid-template-columns repeat(2, 1fr)
  grid-template-rows 12em repeat(2, .5fr) repeat(2, .5fr)
  ul
    padding 0
    list-style none
